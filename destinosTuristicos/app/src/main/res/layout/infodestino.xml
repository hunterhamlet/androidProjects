<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/infoimage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/infoimage"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:id="@+id/infolugar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infolugar"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:id="@+id/infopais"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infopais"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:id="@+id/infoatractivos"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoatractivos"
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:id="@+id/infocosto"/>
</RelativeLayout>